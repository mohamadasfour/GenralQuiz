<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#ccc</item>
        <item name="colorControlNormal">#ccc</item>
        <item name="colorControlActivated">#00FF00</item>
        <item name="colorControlHighlight">#00FF00</item>
    </style>
    <style name="customStyle">
        <item name="android:textColor">#eee</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">18sp</item>

    </style>
    <style name="CodeFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>
</resources>